package me.maskat.MoneyManager;

import org.bukkit.entity.Player;

import mkproject.maskat.Papi.Papi;

public class MapiPlayer {
	private Player player;
	private int points;
	
	public MapiPlayer(Player player) {
		this.player = player;
		
		Object result = Papi.MySQL.get(Database.Users.POINTS, Database.Users.NAME, "=", player.getName().toLowerCase(), Database.Users.TABLE);
		
		if(result == null)
			this.points = 0;
		else
		{
			try {
				this.points = Integer.parseInt(result.toString());
			} catch(Exception ex) {
				this.points = 0;
			}
		}
	}
	
	public getPlayer() {
		return this.player;
	}
	
	public getPoints() {
		return this.player;
	}
}
