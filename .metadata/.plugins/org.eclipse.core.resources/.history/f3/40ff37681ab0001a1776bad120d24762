package mkproject.maskat.Papi.Scheduler;

import java.time.DayOfWeek;
import java.time.LocalDateTime;
import java.util.Timer;
import java.util.TimerTask;

import mkproject.maskat.Papi.Papi;

public class PapiSchedulerManager {
	private 
	
	public void timer() {
		Timer timer = new Timer();
		timer.schedule(new TimerTask() {
		    @Override
		    public void run() {
		    	PapiScheduler.
		    }
		}, 0, 1000);
	}
	
	public void registerTask(PapiScheduler papiScheduler, DayOfWeek dayOfWeek, int hourOfDay, int minute, int second) {
		Timer timer = new Timer();
		timer.schedule(new TimerTask() {
			@Override
			public void run() {
				DayOfWeek dayOfWeek = Papi.Function.getCurrentLocalDateTime().getDayOfWeek();
				int hourOfDay = Papi.Function.getCurrentLocalDateTime().getHour();
				int hourOfDay = Papi.Function.getCurrentLocalDateTime().getMinute()
				PapiScheduler
			}
		}, 0, 1000);
	}
}
